<p id="notice"><%= notice %></p>

<% if user_signed_in? %>
    <li><%= link_to "New Student Profile", new_student_profile_path, class: "active" %></li>
    <li><%= link_to "Account", edit_user_registration_path %></li>
    <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
<% else %>
    <li><%= link_to "Sign Up", new_user_registration_path, class: "active" %></li>
    <li><%= link_to "Sign In", new_user_session_path, class: "active" %></li>
<% end %>

<h1>Student Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Student ID</th>
      <th>Contact Number</th>
      <th>Field Of Study</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student_profiles.each do |student_profile| %>
      <tr>
        <td><%= student_profile.name %></td>
        <td><%= student_profile.studentID %></td>
        <td><%= student_profile.phoneNo %></td>
        <td><%= student_profile.fos %></td>
        <td><%= link_to 'Show', student_profile %></td>
        <td><%= link_to 'Edit', edit_student_profile_path(student_profile) %></td>
        <td><%= link_to 'Destroy', student_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

